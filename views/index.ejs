<% include ./non-header %>

<body>
  <h1>Vinyl</h1>

  <h2>Records</h2>

  <div class="album-list">
    <% albums.forEach(function(album) { %>
      <div>
        <h4><a href="/albums/<%= album.id %>"><%= album.title %></a></h4>
        <span><%= album.artist %></span>
      </div>
    <% }) %>
  </div>

<h2>Recent Reviews</h2>

  <div class="review-list">
    <% reviews.forEach(function(review) { %>
      <div>
        <h4><a href="/albums/<%= review.album_id %>"><%= review.title %></a></h4>
        <p><%= review.review %></p>
        <h5><a href="/user/<%= review.user_id %>"><%= review.name %></a></h5>
      </div>
    <% }) %>
  </div>

</body>
