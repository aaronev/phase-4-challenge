<% include ./user-header %>
<link rel="stylesheet" type="text/css" href="/style.css">

<div class="profile-info navbar navbar-default container">
  <h2><%= user.name %></h2>
  <img width="150" height="150" src=<%= user.image %>>
  <h4> Email: <%= user.email %> </h4>
  <h5> Joined:  <%= user.timestamp %> </h5>


<div class="album-list navbar navbar-default">
<div class="pull-left">
<h2>Albums</h2>
<% albums.forEach(function(album) { %>
  <div>
    <h4><a href=""><%= album.title %></a></h4>
    <span><%= album.artist %></span>
  </div>
<% }) %>
</div>



<div class="review-list pull-right">
  <h2>Your Reviews</h2>
    <% reviews.forEach(function(review) { %>
      <div>
        <h4><a href=""><%= review.title %></a></h4>
        <p><%= review.review %></p>
        <input class="hide" name="reviewID" value=<%= review.id%>>
        <input class="hide" name="auth" value=<%= auth%>>
        <input class="hide" name="userID" value=<%= review.user_id%>>
        <input value=<%= review.user_id%> type=image src="http://findicons.com/files/icons/1580/devine_icons_part_2/128/trash_recyclebin_empty_closed.png" width="30px">
      </div>
   
    </div>
  </div>
</div>

<div class="verify-delete">
  <h3>Are you sure you want to delete this review?</h3>
      <a href="/user/<%=auth%>/<%=userID%>/delete/<%= review.id%>">
      <input class="confirm-delete"type="submit" value="Yes"></a>  
      <a href="/user/<%=auth%>/<%=userID%>/"><input type="submit" value="No"></a>
</div>
<% }) %>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script type="text/javascript" src="/script.js"></script>
  </body>
</html>