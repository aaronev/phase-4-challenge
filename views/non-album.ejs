<!DOCTYPE html>
<html>
<head>
  <title>Vinyl : <%= album.title %></title>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <script type="text/javascript" src="/script.js"></script>
  <% include ./non-header %>
</head>
<body>

  <h2><%= album.title %></h2>
  <em>by <%= album.artist %></em>

  <h3>Reviews</h3>

  <div class="review-list">
    <% reviews.forEach(function(review) { %>
      <div>
        <h4><a href="/albums/<%= review.album_id %>"><%= review.title %></a></h4>
        <p><%= review.review %></p>
        <h5><a href="/user/<%= review.user_id %>"><%= review.name %></a></h5>
      </div>
    <% }) %>
  </div>

</body>
</html>
