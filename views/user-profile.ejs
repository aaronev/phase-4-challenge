<% include ./user-header %>
<link rel="stylesheet" type="text/css" href="/style.css">

<div class="profile-info navbar navbar-default container">
  <h2><%= user.name %></h2>
  <img width="150" height="150" src=<%= user.image %>>
  <h4> Email: <%= user.email %> </h4>
  <h5> Joined:  <%= user.timestamp %> </h5>


<div class="album-list navbar navbar-default">
<div class="pull-left">
<h2>Albums</h2>
<% albums.forEach(function(album) { %>
  <div>
    <h4><a href="albums/<%= album.id %>"><%= album.title %></a></h4>
    <span><%= album.artist %></span>
  </div>
<% }) %>
</div>


<div class="review-list pull-right">
  <h2>Your Reviews</h2>
    <% reviews.forEach(function(review) { %>
      <div>
        <h4><a href="/albums/<%= review.album_id %>"><%= review.title %></a></h4>
        <p><%= review.review %></p>
        <form method="post" action="/reviews/delete">
        <input class="hide" name="id" value=<%= review.id%>>
        <input class="hide" name="auth" value=<%= auth%>>
        <input class="hide" name="userID" value=<%= review.user_id%>>
        <input class="trash" type=image src="http://findicons.com/files/icons/1580/devine_icons_part_2/128/trash_recyclebin_empty_closed.png" width="30px">
        </form>
      </div>
    <% }) %>
    </div>
  </div>
</div>

  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script type="text/javascript" src="/script.js"></script>
  </body>
</html>