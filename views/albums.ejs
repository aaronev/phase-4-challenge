<% include ./header %>
<body>

  <h2><%= albums.title %></h2>
  <h3><%= albums.artist %></h3>
  <h2>Reviews</h2>

  <% reviews.forEach(function(review) { %>
    <div>
    <h6><%= review.timestamp%></h6>
    </p><%= review.review %></p>
    <% users.forEach(function(user) { %>
      <% if (user.id === review.user_id) {%>
        <h5><a href="/users/<%= review.user_id %>"><%= user.name %></a></h5>
      <% } %>
    <% }) %>
    </div>
  <% }) %>
  
</body>